<div class="app">
  <h1>Palindrome Checker</h1>
  <p>Enter a string to see if it's a palindrome!</p>
  <%= form_with url: palindrome_path, method: :post do %>
    <%= label_tag "String:" %>
    <%= text_field_tag "string", nil, options = {:required => true} %> <%# text field tag name in quotes must equal the instance variable params name %>
    <%= submit_tag "Check" %>
  <% end %>
  <br />
  <br />
  <h3><%= link_to "Back to Tidbits List", tidbits_path, class: "link" %></h3>
</div>